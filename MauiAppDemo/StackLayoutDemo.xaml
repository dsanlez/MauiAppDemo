<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDemo.StackLayoutDemo"
             Title="StackLayoutDemo">
    
    
    <VerticalStackLayout Margin="20" HorizontalOptions="Start">
        <HorizontalStackLayout VerticalOptions="Start">
            <Label Text="Name" />
            <Entry WidthRequest="150" HeightRequest="30"></Entry>
            <Label Text="Tell us your name" TextColor="Red"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout VerticalOptions="Start">
            <Label Text="Age" />
            <Entry WidthRequest="150" HeightRequest="30"></Entry>
            <Label Text="Tell us your age" TextColor="Red"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>